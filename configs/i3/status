# i3status configuration file.
# see "man i3status" for documentation.

general {
        colors = true
        interval = 5
}

order += "disk /"
order += "ethernet _first_"
order += "load"
order += "battery 0"
order += "tztime local"

ethernet _first_ {
        format_up = "E: %ip"
        format_down = "E: down"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "Load: %1min"
}

disk "/" {
        format = "HDD: %percentage_used used"
}

battery 0 {
       format = "%status %percentage %remaining %emptytime"
       integer_battery_capacity = true
       last_full_capacity = true
       format_down = "No battery"
       status_chr = "âš¡ CHR"
       status_bat = "ðŸ”‹ BAT"
       status_unk = "? UNK"
       status_full = "â˜» FULL"
       path = "/sys/class/power_supply/BAT%d/uevent"
       low_threshold = 10
}
